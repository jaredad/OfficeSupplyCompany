<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.OfficeSupplyController">
   <children>
      <VBox fx:id="vbox" spacing="20.0">
         <children>
            <HBox fx:id="topHbox" spacing="20.0">
               <children>
                  <ChoiceBox fx:id="searchType" />
                  <TextField fx:id="searchField" text="Keyword/SKU">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="search" mnemonicParsing="false" text="Search" />
                  <Button fx:id="add" mnemonicParsing="false" onAction="#openItemWindow" text="Add Item" />
               </children>
               <VBox.margin>
                  <Insets left="125.0" right="125.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="table" fixedCellSize="0.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn minWidth="-1.0" prefWidth="107.0" resizable="false" text="SKU" />
                <TableColumn maxWidth="216.0" minWidth="37.0" prefWidth="189.0" resizable="false" text="Name" />
                  <TableColumn prefWidth="86.0" resizable="false" text="Location" />
                  <TableColumn minWidth="0.0" prefWidth="62.0" resizable="false" text="Price" />
                  <TableColumn prefWidth="91.0" resizable="false" text="Category" />
                  <TableColumn prefWidth="54.0" text="Quantity" />
              </columns>
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox fx:id="bottomHbox" spacing="27.0">
               <children>
                  <Button fx:id="viewEdit" mnemonicParsing="false" text="View/Edit Item" />
                  <Button fx:id="delete" mnemonicParsing="false" text="Delete Item">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <HBox>
                     <children>
                        <ToggleButton mnemonicParsing="false" text="Add" />
                        <ToggleButton mnemonicParsing="false" text="Set" />
                        <TextField prefHeight="27.0" prefWidth="30.0" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="132.0" right="132.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
