<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.OfficeSupplyController">
   <children>
      <VBox fx:id="vbox" spacing="20.0">
         <children>
            <HBox fx:id="topHbox" spacing="20.0">
               <children>
                  <ChoiceBox fx:id="searchType" />
                  <TextField fx:id="searchField" onAction="#changeSuggestionsList" promptText="Keyword/SKU">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="search" mnemonicParsing="false" onAction="#searchItem" text="Search" />
                  <Button fx:id="resetButton" mnemonicParsing="false" onAction="#reset" text="Reset" />
               </children>
               <VBox.margin>
                  <Insets left="150.0" right="150.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="table" fixedCellSize="0.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="skuColumn" minWidth="-1.0" prefWidth="107.0" resizable="false" text="SKU" />
                <TableColumn fx:id="nameColumn" maxWidth="216.0" minWidth="37.0" prefWidth="189.0" resizable="false" text="Name" />
                  <TableColumn fx:id="locationColumn" prefWidth="86.0" resizable="false" text="Location" />
                  <TableColumn fx:id="priceColumn" minWidth="0.0" prefWidth="62.0" resizable="false" text="Price" />
                  <TableColumn fx:id="categoryColumn" prefWidth="91.0" resizable="false" text="Category" />
                  <TableColumn fx:id="quantityColumn" prefWidth="54.0" text="Quantity" />
              </columns>
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox fx:id="bottomHbox" spacing="27.0">
               <children>
                  <Button fx:id="add" mnemonicParsing="false" onAction="#openItemWindow" text="Add Item" />
                  <Button fx:id="viewEdit" mnemonicParsing="false" onAction="#editViewItemInfo" text="View/Edit Item" />
                  <Button fx:id="delete" mnemonicParsing="false" onAction="#deleteItem" text="Delete Item">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="132.0" right="132.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
